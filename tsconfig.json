{
    "ts-node": {
        "compilerOptions": {
            "target": "es6",
            "module": "commonjs"
        }
    },
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "esnext",
        "esModuleInterop": true,
        "isolatedModules": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [ "node_modules/@types", "./custom_typing"],
        "baseUrl": "src",
        "incremental": true,
        "paths": {
            "@settings/*": ["popup/components/Settings/*"],
            "@main/*": ["popup/components/Main/*"],
            "@context/*": ["popup/context/*"],
            "@parts/*": ["popup/parts/*"],
            "@popupUtils/*": ["popup/utils/*"],
            "@popupCoreStyles/*": ["popup/styles/*"],
            "@static/*": ["static/*"],
            "@coreUtils/*": ["utils/*"],
            "@hooks/*": ["utils/hooks/*"],
            "@models/*": ["models/*"]
        }
    },
    "include": [
        "./src/**/*",
        "./rspack.config.ts",
        "./custom_typing/**/*"
    ],
    "exclude": ["public", "./node_modules"]
}
